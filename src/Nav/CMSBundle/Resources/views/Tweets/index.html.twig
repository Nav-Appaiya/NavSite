{% extends '@NavCMS/layout.html.twig' %}

{% form_theme joke 'NavCMSBundle:Form:bootstrap_3_horizontal_layout.html.twig' %}

{% block body -%}
    <h1 class="page-header">Tweets overview</h1>
    {% if  notifications is defined %}
        <div class="alert alert-dismissible alert-success">
            {% for notification in notifications.get('notifications') %}
                <button type="button" class="close" data-dismiss="alert">x</button>
                <h4>{{ notification.title }}</h4>
                <p>{{ notification.message }}</p>
            {% endfor %}
        </div>
    {% endif %}
    <div class="well">
        {{ form(joke) }}
    </div>



    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th width="10%">Created at</th>
            <th>Content</th>
        </tr>
        </thead>
        <tbody>
        {% for tweet in tweets %}
            <tr>
                <td>{{ tweet.id_str }}</td>
                <td>{{ tweet.created_at|date('m-d-Y H:i:s') }}</td>
                <td>{{ tweet.text }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

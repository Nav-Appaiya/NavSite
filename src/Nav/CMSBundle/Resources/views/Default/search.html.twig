{% extends '@NavCMS/layout.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="page-header" id="banner">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <h1>Search</h1>

                        <p class="lead">Stay Searching.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">

            {% for result in results %}
                <div class="list-group">
                    <a href="{{ result.feed }}" class="list-group-item">
                        <h4 class="list-group-item-heading">
                            {{ result.title }}
                            <small>- {{ result.category }}</small>
                        </h4>

                        <p class="list-group-item-text">
                            {{ result.content }}
                        </p>
                    </a>
                </div>
            {% endfor %}

        </div>
    </div>
{% endblock %}
{% extends '::base.html.twig' %}

{% block title %}Todo {% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12 text-center">
            <h1>Project: Todo</h1>
            <p class="lead"> I <3 Lists</p>
        </div>
    </div>
    <div class="row">
        {% for label, flashes in app.session.flashbag.all %}
            {% for flash in flashes %}
                <div class="alert alert-{{ label }}">
                    {{ flash }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>

    <hr>

    <div class="row">
        <div class="col-lg-6">
            <form role="form" method="post">
                <div class="form-group">
                    <input type="text" id="todo_new" name="todo_new" class="form-control" placeholder="New todo.." />
                </div>
                <button type="submit" class="form-group btn btn-primary">Create!</button>
            </form>
        </div>
        <div class="col-lg-6">
            {% for todo in todos %}
                <div class="alert alert-info alert-dismissable">
                    <a href="{{ path('project_todo_delete', {'todo': todo.id})   }}" class="btn btn-xs btn-primary pull-right">Done!</a>
                    <small><i>{{ todo.createdAt|date }}</i></small> <h4>{{ todo.content }}</h4>
                </div>
            {% endfor %}


        </div>
    </div>
{% endblock %}

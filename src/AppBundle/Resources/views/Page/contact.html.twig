{% extends '::base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body%}

    <!-- .row heading -->
    <div class="row">
        <!-- .col-lg-12 centered text -->
        <div class="col-lg-12 text-center">
            <h1>Contact</h1>
            <p class="lead">Please feel free email me, or fill out this form if you require any further information.	</p>
        </div> <!-- ./.col-lg-12 -->
    </div>  <!-- ./.row heading -->

    <hr/> <!-- hr Page divider -->

    <!-- .container -->
        <div class="container">
            <div class="row">
                {% for flashMessage in app.session.flashbag.get('notice') %}
                    <div class="flash-notice">
                       <h1 class="text-center"> {{ flashMessage }}</h1>
                    </div>
                {% endfor %}
            </div>

            <!-- .row outer-->
            <div class="row">
                <!-- .col-sm-4 extra info -->
                <div class="col-sm-4">
                    <h3>Questions or Suggestions?</h3>
                    <p>Please feel free to contact me if you have any questions or comments.</p>
                    <address>
                        <strong>Email:</strong> <a href="mailto:navarajh@gmail.com"> navarajh@gmail.com</a><br>
                    </address>
                </div> <!-- ./.col-sm-4 extra info -->

                <!-- .contact-form -->
                    <div class="col-sm-8 contact-form">
                    {{ form(form) }}
                </div>  <!-- ./.contact-form -->
            </div>  <!-- ./.row outer -->
        </div>  <!-- ./.container -->

{% endblock%}